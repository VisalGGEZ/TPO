<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">default</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleGeneralAsWhite" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextStyleGeneralAsWhiteSplashScreen" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="TextStyleGeneralAsPrimary" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyleGeneralAsPrimarySizeNormal" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTextStyleGeneralPrimary" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="SpinnerStyleGeneralPrimary" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>
</resources>
