<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context=".views.activities.slide.fragments.SlideThreeFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerInParent="true">

        <TextView style="@style/TextStyleGeneralAsWhite"
                  android:layout_gravity="center_horizontal"
                  android:text="ផ្ដល់ជូននូវវគ្គបណ្ដុះបណ្កាល \n មុនចូលបម្រើការងារ"
                  android:gravity="center"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <ImageView android:layout_width="0dp"
                       android:src="@drawable/pic_1"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="2.5dp"
                       android:adjustViewBounds="true"/>

            <ImageView android:layout_width="0dp"
                       android:src="@drawable/pic_2"
                       android:layout_marginStart="2.5dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"/>

        </LinearLayout>

        <TextView style="@style/TextStyleGeneralAsWhite"
                  android:layout_marginTop="30dp"
                  android:layout_gravity="center_horizontal"
                  android:text="យើងជោគជ័យទាំងអស់គ្នា"
                  android:gravity="center"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <View android:layout_width="0dp"
                       android:layout_weight="0.5"
                       android:layout_height="10dp"
                       android:layout_marginEnd="2.5dp"/>

            <ImageView android:layout_width="0dp"
                       android:src="@drawable/pic_3"
                       android:layout_marginStart="2.5dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"/>

            <View android:layout_width="0dp"
                  android:layout_weight="0.5"
                  android:layout_height="10dp"
                  android:layout_marginEnd="2.5dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>